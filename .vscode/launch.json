{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Chrome",
      "type": "chrome",
      "request": "launch",
      "webRoot": "${workspaceRoot}",
      "url": "http://localhost:9090",
      "userDataDir": "${workspaceRoot}/.vscode/chrome",
      "sourceMaps": true,
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": [
        "node_modules/**"
      ],
      "sourceMapPathOverrides": {
        "webpack:///*": "${webRoot}/*"
      }
    },
    {
      "name": "Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/server.js",
      "stopOnEntry": false,
      "args": [],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": null,
      "runtimeExecutable": null,
      "runtimeArgs": [
        "--nolazy"
      ],
      "env": {
        "NODE_ENV": "development",
        "PLANT_TOKEN_SECRET": "json-web-token-secret",
        "PLANT_DB_URL": "127.0.0.1:27017",
        "PLANT_DB_NAME": "plant-development",
        "PLANT_FB_ID": "facebook-app-id",
        "PLANT_FB_SECRET": "facebook-app-secret",
        "DEBUG": "plant:*"
      },
      "console": "internalConsole",
      "sourceMaps": true
    }, {
      "name": "TestPad",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/devops/locations-converter.js",
      "stopOnEntry": false,
      "args": [],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": null,
      "runtimeExecutable": null,
      "runtimeArgs": [
        "--nolazy"
      ],
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "plant:*"
      },
      "console": "internalConsole",
      "sourceMaps": true
      }, {
        "name": "Unit Test",
        "type": "node",
        "request": "launch",
        "program": "${workspaceRoot}/node_modules/.bin/jest",
        "args": ["-i"],
        "env": {
          "NODE_ENV": "development",
          "PLANT_TOKEN_SECRET": "json-web-token-secret",
          "PLANT_DB_URL": "127.0.0.1:27017",
          "PLANT_DB_NAME": "plant-test",
          "PLANT_FB_ID": "facebook-app-id",
          "PLANT_FB_SECRET": "facebook-app-secret",
          "PLANT_GOOGLE_ID": "google-app-id",
          "PLANT_GOOGLE_SECRET": "google-app-secret"
        },
        "cwd": "${workspaceRoot}"
      }, {
      "name": "Unit Test Focused",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/jest",
      "args": [
        "${workspaceRoot}/test/lib/render/plant.test.js", // replace this file with the file to focus
        "-i",
        "--forceExit"
      ],
      "env": {
        "NODE_ENV": "development",
        "DEFAULT_TIMEOUT_INTERVAL": "999000",
        "PLANT_TOKEN_SECRET": "json-web-token-secret",
        "PLANT_DB_URL": "127.0.0.1:27017",
        "PLANT_DB_NAME": "plant-test",
        "PLANT_FB_ID": "facebook-app-id",
        "PLANT_FB_SECRET": "facebook-app-secret",
        "PLANT_GOOGLE_ID": "google-app-id",
        "PLANT_GOOGLE_SECRET": "google-app-secret"
      },
      "cwd": "${workspaceRoot}"
      }, {
        "name": "Debug Jest Tests",
        "type": "node",
        "request": "launch",
        "runtimeArgs": [
          "--inspect-brk",
          "${workspaceRoot}/node_modules/.bin/jest",
          "--runInBand",
          "--forceExit"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "sourceMaps": true
      }, {
        "name": "Focused Jest Test",
        "type": "node",
        "request": "launch",
        "runtimeArgs": [
          "--inspect-brk",
          "${workspaceRoot}/node_modules/.bin/jest",
          "${workspaceRoot}/test/app/reducers/plants.test.js", // replace this file with the file to focus
          "--runInBand",
          "--forceExit"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "sourceMaps": true
      }
      ],
  "compounds": [
    {
      "name": "Server/Client",
      "configurations": ["Server", "Chrome"]
    }
  ]
}
